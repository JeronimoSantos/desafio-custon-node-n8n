{
  "compilerOptions": {
    /* Linguagem e compatibilidade */
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],

    /* Pastas */
    "rootDir": ".",
    "outDir": "dist",

    /* Qualidade do código */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    /* Interoperabilidade */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    /* Geração de tipos */
    "declaration": false,

    /* Otimizações */
    "skipLibCheck": true
  },
  "include": ["../**/*.ts"],
  "exclude": ["../node_modules", "../dist"]
}
